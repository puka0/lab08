<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootThird"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tVTitleThird"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/TxtViewTitle"
        tools:text="@string/TxtViewTitle" />

    <TextView
        android:id="@+id/title_third"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tVContentThird"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/TxtViewContent"
        tools:text="@string/TxtViewContent" />

    <TextView
        android:id="@+id/content_third"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="117dp"
        android:layout_height="72dp"
        android:onClick="on_close_click"
        android:text="@string/butCLOSE"
        tools:text="@string/butCLOSE" />

</LinearLayout>